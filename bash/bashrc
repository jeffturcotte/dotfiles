# ignore dupes and spaces, set history size
export HISTCONTROL=ignoreboth:ignorespace:erasedups
export HISTSIZE=1000
export HISTFILESIZE=2000
export SVN_EDITOR='NVIM_TUI_ENABLE_TRUE_COLOR=1 nvim'

# aliases
alias ls='ls -Gh'
